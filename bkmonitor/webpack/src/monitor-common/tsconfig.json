{
  "include": [
    "./**/*.ts",
    "./**/*.tsx",
    "./*.ts",
  ],
  "exclude": [
    "node_modules"
  ],
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "module": "esnext",
    "target": "esnext",
    "outDir": "dist",
    "moduleResolution": "node",
    "sourceMap": true,
    "pretty": true,
    "jsx": "preserve",
    "lib": [
      "es2018",
      "dom"
    ]
  }
}